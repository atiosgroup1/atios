.page-header
  %h1 Admin Demo page
%p This is a admin page. Here the administrator of system can add, delete, modify accounts for all lecturers

.row
  .span8
    =render 'layouts/add_form'
    %a.btn.pull-right.btn-primary{"data-toggle" => "modal", :href => "#myModal"}
      %i.icon-user
      Add a lecturer
    %table.table.table-condensed
      %thead
        %tr
          %th= "#"
          %th= "Name"
          %th= "E-mail"
          %th
          %th
      %tbody
        - @lecturers.each do |lecturer|

          %tr
            %td= lecturer[0]
            %td= lecturer[1]
            %td= lecturer[2]
            %td
              %a.btn.btn-danger{:href => "#"}
                %i.icon-trash.icon-white
                Delete
            %td
              %a.btn.btn-small{:href => "#", :rel => "popover"}
                %i.icon-cog
                Settings
        - for i in @lecturers.count+1..25 do
          %tr
            %td= i
            %td= random_name
            %td= random_email
            %td
              %a.btn.btn-danger{:href => "#"}
                %i.icon-trash.icon-white
                Delete
            %td
              %a.btn.btn-small{:href => "#", :rel => "popover"}
                %i.icon-cog
                Settings

    %a.btn.pull-right.btn-primary{"data-toggle" => "modal", :href => "#myModal"}
      %i.icon-user
      Add a lecturer


